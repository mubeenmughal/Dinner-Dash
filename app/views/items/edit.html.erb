<div class="container2 ">
  <div class="border shadow p-3 mb-5 bg-white rounded">
    <h4 class="container1">Update Item Form</h4>
    <%= form_for [:resturant, @item],:html => {:class => "form-horizontal center"} do |f| %>
      <div class=form-width>
        <div class="form-group ">
          <%= f.label :name,"Name",class: "col-md-4 control-label"%>
          <div class="col-md-12">
            <%= f.text_field :name,required:true,class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :price,"Price",required:true,class: "col-md-4 control-label" %>
          <div class="col-md-12">
          <%= f.number_field :price,required:true,class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description,"Description",class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.text_area :description,required:true,:cols => 30, :rows => 5,class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :image,"Picture",class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.file_field :image,direct_upload: true, accept: 'image/jpg,image/jpeg,image/png,image/gif',required:true,class: "form-control" %>
          </div>
        </div>
        <div class="form-check">
          <div id="category-list">Categories</div>
          <%= collection_check_boxes(:item, :category_ids, Category.all, :id, :name) do |b| %>
            <%= b.label(class: "custom-control custom-checkbox ") { b.check_box + b.text } %>
          <%end%>
        </div>
        <div class="form-check">
          <div id="category-list">Status</div>
            <%Item.statuses.each do |key,value|%>
              <div class="custom-control custom-checkbox ">
                <%= f.radio_button :status, key ,checked:@item.status == key %>
                <%= f.label :key, key %>
              </div>
            <%end%>
          </div>
        </div>
        <div>
          <%= f.submit "Update Product",class: "btn btn-default btn-primary btn-margin" %>
        </div>
      </div>
    <%end%>
  </div>
</div>


<div class="container2">
  <div class="border shadow p-3 mb-5 bg-white rounded">
    <h4 class="container2">Log in</h4>
    <%= form_for(resource, as: resource_name, :html => {:class => "form"},url: session_path(resource_name)) do |f| %>
      <div class=form-width>
        <div class="form-group">
          <%= f.label :email,class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.email_field :email, autofocus: true,class:"form-control", autocomplete: "email" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password,class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.password_field :password, class:"form-control",  autocomplete: "current-password" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="forget-link">
          <%= render "devise/shared/links"%>
        </div>
        <div >
          <%= f.submit "Log in" ,class:"btn btn-default btn-primary btn-margin" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
